<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> LOGIN </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="custom-body">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" style="color: white;" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" style="background-color: white;">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Seguridad Al Menu -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- MENU PARA AUTORIZADOS -->
                            @if (User.IsInRole("Administrador."))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" style="color: white;" asp-area="" asp-controller="Usuario" asp-action="Usuarios_Registrados">USUARIOS REGISTRADOS.</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" style="color: white;" asp-area="" asp-controller="Usuario" asp-action="Perfil">MI PERFIL.</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" style="color: white;" asp-area="" asp-controller="Seguridad" asp-action="Login">SALIR.</a>
                            </li>
                            <li>
                                <span style="color: white;">Usuario: @User.Identity.Name</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
