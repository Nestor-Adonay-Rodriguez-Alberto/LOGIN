@model Entidades.Usuario

@{
    ViewData["Title"] = "Login";
}

<style>
    /* Estilos Para Cuadro */
    .form-container {
        max-width: 400px;
        padding: 20px;
        background-color: #f7f7f7;
        border-radius: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 20px;
    }

        .form-container h1 {
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            color: #333;
            text-transform: uppercase;
        }

        .form-container .row {
            margin-bottom: 10px;
        }

        .form-container label {
            font-weight: bold;
        }

    .error-message {
        color: red;
        font-weight: bold;
        margin-top: 5px;
    }

    }
</style>

<div class="form-container">
    <h1>Login</h1>
    <br />

    <h5>Ingresa Tus Datos</h5>
    <hr />
    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- FILA #2 -->
        <div class="row">

            <div class="form-group col-md-12">
                <label class="control-label">EMAL:</label>
                <input asp-for="Gmail" class="form-control" />
                <span asp-validation-for="Gmail" class="text-danger"></span>
            </div>


        </div>

        <!-- FILA #2 -->
        <div class="row">

            <div class="form-group col-md-7">
                <label class="control-label">USUARIO:</label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="form-group col-md-5">
                <label class="control-label">CONTRASEÑA:</label>
                <input asp-for="Contraseña" class="form-control" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>

        </div><br />

        <!-- BOTONES -->
        <div class="row">
            <div class="form-group col-md-12">
                <input type="submit" value="LOGIN" class="btn btn-primary" />
                <div class="error-message">
                    @ViewBag.Error
                </div>
            </div>
        </div>


    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
